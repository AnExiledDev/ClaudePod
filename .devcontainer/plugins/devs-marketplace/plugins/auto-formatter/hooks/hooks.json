{
  "description": "Auto-format files after editing",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/format-file.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
